    <style name="AppTheme" parent="UIKit.UIKitAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?attr/uikit_color_primary</item>
        <item name="colorPrimaryDark">?attr/uikit_color_primary_variant</item>
        <item name="colorAccent">?attr/uikit_color_secondary</item>
<!--        <item name="android:windowBackground">@color/skip_window_background</item>-->
