    <style name="text_title_h6">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/skip_font_h6_color</item>
    </style>

    <style name="text_body_list">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/skip_font_listbody_color</item>
