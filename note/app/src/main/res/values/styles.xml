        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/skip_font_h6_color</item>
    </style>
    <style name="text_subtitle_2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/skip_font_h6_color</item>
    </style>
    <style name="text_overline">
