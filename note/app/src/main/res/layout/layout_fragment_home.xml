<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/account_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_account_circle_black_80dp"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/account_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingRight="96dp"
        android:paddingTop="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="我的名字非常非常的长，我很长很长哈哈"
        tools:targetApi="lollipop"
        tools:text="我的名字非常非常的长，我很长很长哈哈"
        android:paddingEnd="96dp"></TextView>

    <TextView
        android:id="@+id/account_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Caption"
        app:layout_constraintTop_toBottomOf="@id/account_userName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="96dp"
        android:layout_marginTop="8dp"
        android:text="我是很长很长的名称哦，可以理解，这不是问题，不这只有这一点长哦，哈哈"
        tools:targetApi="lollipop"
        tools:text="我是很长很长的名称哦，可以理解，这不是问题，不这只有这一点长哦，哈哈"
        android:layout_marginEnd="96dp"></TextView>






</androidx.constraintlayout.widget.ConstraintLayout>
