<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/account_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="86dp"
        android:src="@drawable/ic_account_circle_black_80dp"></ImageView>

    <TextView
        android:id="@+id/account_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingRight="96dp"
        android:paddingTop="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        tools:targetApi="lollipop"
        android:text="我的名字非常非常的长，我很长很长哈哈" ></TextView>

    <TextView
        android:id="@+id/account_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Caption"
        app:layout_constraintTop_toBottomOf="@id/account_userName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="96dp"
        android:layout_marginTop="8dp"
        tools:targetApi="lollipop"
        android:text="我是很长很长的名称哦，可以理解，这不是问题，不这只有这一点长哦，哈哈"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
</merge>